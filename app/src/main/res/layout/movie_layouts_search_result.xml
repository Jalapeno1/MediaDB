<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:id="@+id/imageView_RESULT_POSTER"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="7dp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:text="This is a very long film title: part deaux"
        android:textSize="24sp"
        android:gravity="bottom"
        android:id="@+id/textView_RESULT_TITLE"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView_RESULT_POSTER" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:text="1993"
        android:textColor="@color/button_material_dark"
        android:id="@+id/textView_RESULT_YEAR"
        android:layout_below="@+id/textView_RESULT_TITLE"
        android:layout_toEndOf="@+id/imageView_RESULT_POSTER" />
</RelativeLayout>
